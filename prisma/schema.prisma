generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./source.db"
}

model Chat {
  id        Int       @id
  profiles  Profile[]
  gayId     Int?
  updatedAt DateTime  @updatedAt
}

model Profile {
  userId     Int
  chatId     Int
  chat       Chat     @relation(fields: [chatId], references: [id])
  updatedAt  DateTime @updatedAt
  createdAt  DateTime @default(now())
  gayCounter Int      @default(0)

  @@id([userId, chatId])
}
